{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "declaration": true,
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "include": [
        "src",
    ]
}